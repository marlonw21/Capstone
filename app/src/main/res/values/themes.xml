<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Capstone" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/waikawa_gray</item>
        <item name="colorPrimaryDark">@color/mirage</item>
        <item name="colorAccent">@color/akaroa</item>
        <item name="android:textColor">@color/athens_gray</item>
        <item name="android:background">@color/mirage</item>
        <item name="colorButtonNormal">@color/waikawa_gray</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Capstone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Capstone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Capstone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>